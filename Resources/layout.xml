<?xml version="1.0" encoding="UTF-8"?>

<magic>
  <Styles>
    <Style name="default">
      <Nodes/>
      <Classes>
        <plot-view border="2" background-color="black" border-color="silver" display="contents"/>
        <nomargin margin="0" padding="0" border="0"/>
        <group margin="5" padding="5" border="2" flex-direction="column"/>
        <transparent background-color="transparentblack"/>
      </Classes>
      <Types>
        <Slider border="0" slider-textbox="textbox-below"/>
        <ToggleButton border="0" max-height="50" caption-size="0" text="Active"/>
        <TextButton border="0" max-height="50" caption-size="0"/>
        <ComboBox border="0" max-height="50" caption-size="0"/>
        <Plot border="0" margin="0" padding="0" background-color="00000000"
              radius="0"/>
        <XYDragComponent border="0" margin="0" padding="0" background-color="00000000"
                         radius="0"/>
      </Types>
      <Palettes>
        <default/>
      </Palettes>
    </Style>
  </Styles>
  <View id="root" resizable="0" resize-corner="0" width="600" height="400"
        caption="cChorus">
    <View flex-direction="column" caption="Modulation" background-color="FF353535">
      <View>
        <Slider caption="Type" parameter="type"/>
      </View>
      <View>
        <Slider caption="Rate" parameter="rate"/>
        <Slider caption="Amount" parameter="amount"/>
      </View>
    </View>
    <View class="parameters nomargin" flex-direction="column">
      <View>
        <Slider caption="Feedback" parameter="feedback"/>
        <Slider caption="Flip" parameter="flip_fb"/>
      </View>
      <View>
        <Slider caption="Width" parameter="width"/>
        <Slider caption="Output" parameter="output"/>
        <Slider caption="Mix" parameter="mix"/>
      </View>
    </View>
  </View>
</magic>
